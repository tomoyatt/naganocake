<h2>ジャンル追加・一覧画面</h2>

<% if flash[:genre_create_error] %>
  <p id="genre_create_error">
    <%= flash[:genre_create_error] %>
  </p>
<% end %>


<%= form_with model: @genre, url: admin_genres_path do |f| %>
  <%= f.label :ジャンル %>
  <%= f.text_field :name %>
  <%= f.submit "新規登録" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>ジャンル</th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre) %></td>
      </tr>
      <% end %>
  </tbody>
</table>