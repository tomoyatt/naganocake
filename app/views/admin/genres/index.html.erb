<h2>ジャンル追加・一覧画面</h2><br>

<% if @genre.errors.any? %>
  <%= @genre.errors.count %>件のエラーが発生しました
  <ul>
    <% @genre.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
  

    <%= form_with model: @genre, url: admin_genres_path do |f| %>
          <%= f.label :ジャンル %>
          <%= f.text_field :name %>
          <%= f.submit "新規登録" %>
    <% end %>
      <table>
        <thead>
          <tr>
            <th>ジャンル</th>
          </tr>
        </thead>

        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre) %></td>
            </tr>
            <% end %>
        </tbody>
      </table>
