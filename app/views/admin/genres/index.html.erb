<div class="container">
  <div class="row">
    <div class="col-xl-10">
      <h4>ジャンル追加・一覧画面</h4>
      <% if flash[:genre_create_error] %>
        <p id="genre_create_error">
          <%= flash[:genre_create_error] %>
        </p>
      <% end %>
      <div class="form mt-5">
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <%= f.label :ジャンル名 %>
        <%= f.text_field :name %>
        <%= f.submit "新規登録", class:"btn btn-success" %>
      <% end %>
      </div>
      
      <table class="table mt-5">
        <thead class="bg-light">
          <tr>
            <th>ジャンル</th>
            <th colspan="1"></th>
          </tr>
        </thead>
      
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre), class:"btn btn-success" %></td>
            </tr>
            <% end %>
        </tbody>
      </table>      
    </div>
  </div>
</div>







