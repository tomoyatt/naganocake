<div class="container">
  <div class="row">
    <dvi class="col-xl-2"></dvi>
    <div class="col-xl-8">
      <label class="h4 bg-light">注文履歴一覧</label>
      <div class="order-table">
        <table class="table">
          <thead class="bg-light">
            <tr>
              <th>購入日時</th>
              <th>購入者</th>
              <th>注文個数</th>
              <th>注文ステータス</th>
            </tr>
          </thead>
          
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admin_order_path(order), class:"text-dark" %></td>
                <td><%= order.customer.last_name + order.customer.first_name %></td>
                <td><%= order.order_details.sum(:amount) %></td>
                <td><%= order.status_i18n %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        
        
      </div>
    </div>
    <div class="col-xl-2"></div>
  </div>
  <div class="row">
    <div class="col-xl-5"></div>
    <div class="col-xl-7">
      <%= paginate @orders %>
    </div>
  </div>
</div>


