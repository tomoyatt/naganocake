<h2>商品説明</h2>

<%= attachment_image_tag @item, :image, :fill, 300, 300, fallback: 'no-image.jpg' %>

<table>
  <tbody>
    <tr>
      <td>商品名</td>
      <td><%= @item.name %></td>
    </tr>
    <tr>
      <td>商品説明</td>
      <td><%= @item.introduction %></td>
    </tr>
    <tr>
      <td>ジャンル</td>
      <td><%= @item.genre.name %></td>
    </tr>
    <tr>
      <td>税込価格<br>(税抜価格)</td>
      <td><%= (@item.price*1.1).floor.to_s(:delimited) %> (<%= @item.price.to_s(:delimited) %>) 円</td>
    </tr>
    <tr>
      <td>販売ステータス</td>
      <td>
        <% if @item.is_active == false %>
          販売停止中
        <% else %>
          販売中
        <% end %>
      </td>
    </tr>
  </tbody>
</table>

<%= link_to "編集する", edit_admin_item_path(@item) %>