<h5><%= (@customer.last_name + @customer.first_name) %>さんの会員情報編集</h2>

<table>
  <tbody>
    <tr>
      <td>会員ID</td>
      <td><%= @customer.id %></td>
    </tr>
  </tbody>
</table>

<%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>

      <%= f.label :名前 %>
      <%= f.text_field :last_name %>
      <%= f.text_field :first_name %>
      <br>
      <%= f.label :フリガナ %>
      <%= f.text_field :last_name_kana %>
      <%= f.text_field :first_name_kana %>
      <br>
      <%= f.label :郵便番号 %>
      <%= f.text_field :postal_code %>
      <br>
      <%= f.label :住所 %>
      <%= f.text_field :address %>
      <br>
      <%= f.label :電話番号 %>
      <%= f.telephone_field :telephone_number %>
      <br>
      <%= f.label :メールアドレス %>
      <%= f.email_field :email %>
      <br>
      <%= f.label :会員ステータス %>
      <%= f.radio_button :is_deleted, true %> 有効
      <%= f.radio_button :is_deleted, false %> 退会
      <br>
  
  <%= f.submit "変更を保存" %>

<% end %>