<h3>ショッピングカート</h3>
    <%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete %>
        <table>
         <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
         </thead>
         <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= cart_item.item.name %></td>
            <td>¥<%= ((cart_item.item.price_with_tax_price).floor).to_s(:delimited) %></td>
            <td>
                <%= form_with model: @cart_item, url: cart_item_path, method: :patch do |f| %>
                <p>
                  <%= f.number_field :amount, min:1, max:10000, step:1 %>
                  <%= f.submit "変更" %>
                </p>
                <% end %>
            </td>
            <td>
                ¥<%= ((cart_item.item.price_without_tax * cart_item.quantity * 1.1).floor).to_s(:delimited, delimiter: ',') %>
            </td>
            <td>
                <%= link_to "削除する", cart_item_path(cart_item.id), method: :delete %>
            </td>
          </tr>
          <% end %>
         </tbody>
        </table>
        
    <table>
        <tr>
            <td>合計金額</td>
            <td>¥</td>
        </tr>
    </table>
