<h2>配送先登録/一覧</h2>

<% if flash[:notice] %>
  <p id="notice">
    <%= flash[:notice] %>
  </p>
<% end %>

<%= form_with model: @address, url: addresses_path, method: :post do |f| %>

  <%= f.label :"郵便番号(ハイフンなし)" %>
  <%= f.text_field :postal_code %>
  
  <br>
  
  <%= f.label :住所 %>
  <%= f.text_field :address %>
  
  <br>
  
  <%= f.label :宛名 %>
  <%= f.text_field :name %>
  
  <%= f.submit "新規登録" %>


<% end %>


<table>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td><%= link_to "編集する", edit_address_path(address) %></td>
      <td><%= link_to "削除する", address_path(address), method: :delete, "data-confirm" => "削除しますか？" %></td>
    </tr>
    <% end %>
  </tbody>
</table>