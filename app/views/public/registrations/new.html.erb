<div class="container">
  <label class="h4 bg-light">新規会員登録</label>
  <div class="row mb-2">
    <div class="col-lg-10">
      <%= form_with model: @customer, url: customer_registration_path do |f| %>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>名前</td>
            <td>
              <%= f.text_field :last_name,  placeholder: "(姓)", class:"mr-3" %>
              <%= f.text_field :first_name,  placeholder: "(名)" %>
            </td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td>
              <%= f.text_field :last_name_kana,  placeholder: "(セイ)", class:"mr-3" %>
              <%= f.text_field :first_name_kana,  placeholder: "(メイ)" %>
            </td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <td>郵便番号(ハイフンなし)</td>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= f.text_field :address, size: "60x30" %></td>
          </tr>
          <tr>
            <td>電話番号(ハイフンなし)</td>
            <td><%= f.telephone_field :telephone_number %></td>
          </tr>
          <tr>
            <td>
              パスワード
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %>文字以上)</em>
              <% end %>
              </td>
            <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          </tr>
          <tr>
            <td>パスワード(確認用)</td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "新規登録", class:"btn btn-success" %></td>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
  <label class="h4 bg-light">既に登録済みの方</label>
  <div class="row mb-5">
    <div class="col-lg-1"></div>
    <div class="col-lg-11">
      <%= link_to "こちら", new_customer_session_path %>　からログインしてください。
    </div>
  </div>
</div>
<%= render "public/shared/error_messages", resource: resource %>
