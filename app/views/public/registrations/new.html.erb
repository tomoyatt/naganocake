<h2>Sign up</h2>

<%= form_with model: @customer, url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  

    <%= f.label :名前 %>
    (姓)
    <%= f.text_field :last_name %>
    (名)
    <%= f.text_field :first_name %>

    <br>

    <%= f.label :フリガナ %>
    (姓)
    <%= f.text_field :last_name_kana %>
    (名)
    <%= f.text_field :first_name_kana %>

    <br>

    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>

    <br>

    <%= f.label :"郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code %>

    <br>

    <%= f.label :住所 %>
    <%= f.text_field :address %>

    <br>

    <%= f.label :"電話番号(ハイフンなし)" %>
    <%= f.telephone_field :telephone_number %>

    <br>

    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>

    <br>

    <%= f.label :"パスワード(確認用)" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>

    <br>

    <%= f.submit "新規登録" %>

<% end %>

<%= render "public/shared/links" %>
