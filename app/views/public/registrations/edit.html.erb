<div class="container">
  <label class="h4 bg-light">会員情報編集</label>
  <div class="error_message">
    <% if flash[:customer_edit_error] %>
      <p id="customer_edit_error">
        <%= flash[:customer_edit_error] %>
      </p>
    <% end %>
  </div>
  <div class="row mb-2">
    <div class="col-lg-10">
      <%= form_with model: @customer, url: customer_registration_path, method: :patch do |f| %>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>名前</td>
            <td>
              <%= f.text_field :last_name, class:"mr-3" %>
              <%= f.text_field :first_name %>
            </td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td>
              <%= f.text_field :last_name_kana, class:"mr-3" %>
              <%= f.text_field :first_name_kana %>
            </td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= f.text_field :address, size: "60x30" %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= f.telephone_field :telephone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <td></td>
            <td>
              <%= f.submit "編集内容を保存", class:"btn btn-success mr-5" %>
              <%= link_to "退会する", customers_unsubscribe_path, class:"btn btn-danger ml-5" %>
            </td>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>

    


