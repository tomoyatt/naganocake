<h2>会員情報編集</h2>

<% if flash[:customer_edit_error] %>
  <p id="customer_edit_error">
    <%= flash[:customer_edit_error] %>
  </p>
<% end %>

<%= form_with model: @customer, url: customer_registration_path, method: :patch do |f| %>
  

    <%= f.label :名前 %>
    (姓)
    <%= f.text_field :last_name %>
    (名)
    <%= f.text_field :first_name %>

    <br>

    <%= f.label :フリガナ %>
    (姓)
    <%= f.text_field :last_name_kana %>
    (名)
    <%= f.text_field :first_name_kana %>

    <br>

    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>

    <br>

    <%= f.label :"郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code %>

    <br>

    <%= f.label :住所 %>
    <%= f.text_field :address %>

    <br>

    <%= f.label :"電話番号(ハイフンなし)" %>
    <%= f.telephone_field :telephone_number %>

    <br>

    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>

    <br>

    <%= f.submit "編集内容を保存" %>

<% end %>