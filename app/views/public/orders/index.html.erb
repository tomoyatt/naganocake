<div class="container">
  <label class="h4 bg-light">注文履歴一覧</label>
  <div class="row mb-2">
    <div class="col-lg-10">
      <table class="table table-bordered">
        <thead>
          <tr>
            <td class="table-active">注文日</td>
            <td class="table-active">配送先</td>
            <td class="table-active">注文商品</td>
            <td class="table-active">支払金額</td>
            <td class="table-active">ステータス</td>
            <td class="table-active">注文詳細</td>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime("%Y/%m/%d") %></td>
            <td>
              〒<%= order.postal_code %>
              <br>
              <%= order.address %>
              <br>
              <%= order.name %>
            </td>
            <td>
              <% order.order_details.each do |order_detail| %>
                <%= order_detail.item.name %><br>
              <% end %>
            </td>
            <td><%= order.total_payment.to_s(:delimited) %>円</td>
            <td><%= order.status_i18n %></td>
            <td><%= link_to '表示する', order_path(order), class:"btn btn-primary" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>