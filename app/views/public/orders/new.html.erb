<div class="container">
  <label class="h4 bg-light">注文情報入力</label>
  <%= form_with model: @order, url: orders_confirm_path, method: :post do |f| %>
  <h5>支払方法</h5>
  <div class="ml-3 mb-2">
    <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
    <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
    <br>
    <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
    <%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>
  </div>
  <h5>お届け先</h5>
  <div class="ml-3 mb-2">
    <%= f.radio_button :select_address, 0 %>
    <%= f.label :address, "ご自身の住所" %>
    <div class="ml-3 mb-2">
      <%= current_customer.address_display %><br>
      <%= current_customer.full_name_display %>
    </div>
    <% if @address.present? %>
      <%= f.radio_button :select_address, 1 %>
      <%= f.label :address, "登録済住所から選択" %>
      <div class="ml-3 mb-2">
        <%= f.select :address_id, options_from_collection_for_select(@address, :id, :address_display) %>
      </div>
    <% end %>
    <%= f.radio_button :select_address, 2 %>
    <%= f.label :address, "新しいお届け先" %>
    <div class="ml-3 mb-2">
      <div class="form-group row">
        <label class="col-lg-4 col-form-label">郵便番号(ハイフンなし)</label>
        <div class="col-lg-8"><%= f.text_field :postal_code %></div>
      </div>
      <div class="form-group row">
        <label class="col-lg-4 col-form-label">住所</label>
        <div class="col-lg-8"><%= f.text_field :address, size: "60x30" %></div>
      </div>
      <div class="form-group row">
        <label class="col-lg-4 col-form-label">宛名</label>
        <div class="col-lg-8"><%= f.text_field :name %></div>
      </div>
    </div>
  </div>
  <div class="text-center">
    <%= f.submit '確認画面へ進む', class:"btn btn-primary" %>
  </div>
  <% end %>
</div>