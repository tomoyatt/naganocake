<h2>注文情報確認</h2>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= attachment_image_tag cart_item.item, :image, :fill, 50, 40, fallback: 'no-image.jpg' %><%= cart_item.item.name %></td>
      <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
      <td><%= cart_item.amount %></td>
      <td><%= ((cart_item.item.with_tax_price) * cart_item.amount).to_s(:delimited) %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<table>
  <tr>
    <th>送料</th>
    <td><%= @order.shipping_cost %></td>
  </tr>
  <tr>
    <th>商品合計</th>
    <td><%= @total_price.to_s(:delimited) %></td>
  </tr>
  <tr>
    <th>請求金額</th>
    <td><%= (@order.total_payment).to_s(:delimited) %></td>
  </tr>
</table>

<h5>支払方法</h5>
<%= form_with model: @order, url: orders_path, method: :post do |f| %>
  <%= @order.payment_method_i18n %>
  <h5>お届け先</h5>
  〒<%= @order.postal_code %> <%= @order.address %><br>
  <%= @order.name %>
  
  <%= f.hidden_field :payment_method, :value => @order.payment_method %>
  <%= f.hidden_field :shipping_cost, :value => @order.shipping_cost %>
  <%= f.hidden_field :postal_code, :value => @order.postal_code %>
  <%= f.hidden_field :address, :value => @order.address %>
  <%= f.hidden_field :name, :value => @order.name %>
  <%= f.hidden_field :total_payment, :value => @order.total_payment %>
  <%= f.hidden_field :status, :value => @order.status %>
  <br>
  <%= f.submit '購入を確定する' %>
<% end %>