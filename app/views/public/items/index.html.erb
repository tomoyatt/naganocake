<div class="container">
  <div class="row">
    <%= render 'public/genres/genre', genres: @genres %>
    <div class="col-lg-10">
      <h4>商品一覧(全<%= @items.count %>件)</h4>
      <div class="row">
        <% @items.each do |item| %>
        <div class="col-lg-3 mb-4">
          <%= link_to (attachment_image_tag item, :image, :fill, 150, 150, fallback: 'no-image.jpg'), item_path(item) %><br>
          <%= link_to item.name, item_path(item) %><br>
          ¥<%= (item.price*1.1).floor.to_s(:delimited) %><br>
        </div>
        <% end %>
      </div>
      <%= paginate @items %>
    </div>
  </div>
</div>




