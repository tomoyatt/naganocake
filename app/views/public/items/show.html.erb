<h2>商品説明</h2>

<% if flash[:notice] %>
  <p id="notice">
    <%= flash[:notice] %>
  </p>
<% end %>

<%= attachment_image_tag @item, :image, :fill, 300, 300, fallback: 'no-image.jpg' %>

<table>
  <tbody>
    <tr>
      <td>商品名</td>
      <td><%= @item.name %></td>
    </tr>
    <tr>
      <td>商品説明</td>
      <td><%= @item.introduction %></td>
    </tr>
    <tr>
      <td>¥<%= (@item.price*1.1).floor.to_s(:delimited) %> (税込)</td>
    </tr>
  </tbody>
</table>

<%= form_with model: @cart_item, url: cart_items_path, method: :post do |f| %>

<%= f.hidden_field :item_id, :value => @item.id %>
<%= f.select :amount, *[1..10], {:prompt => "個数選択"} %>

<%= f.submit "カートに入れる" %>

<% end %>